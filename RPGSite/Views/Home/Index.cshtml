@model RPGSite.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <div class="container text-center">
        <h1>RPG Site</h1>
    </div>
</div>

<div class="container-fluid bg-3 text-center">
    @Scripts.Render("~/bundles/home")
    <div class="row">
        <div class="col-sm-4">
            <p>Characters</p>
            @Html.ActionLink("Add character", "AddCharacter", new { controller = "Character" })
            @Html.ListBoxFor(m => m.SelectedCharId, Model.Characters, new { id = "charList", style = "width:100%", multiple = "false" })
            <div id="charEdit" style="display: none;">
                <a id="editChar">Edit</a>
                <a id="deleteChar">Delete</a>
            </div>
        </div>
        <div class="col-sm-4">
            <p>Dice rollers</p>
            @Html.ActionLink("Add dice roller", "AddDiceroller", new {controller = "Home"})
            @Html.ListBoxFor(m => m.SelectedDiceId, Model.DiceRollers, new {id="rollerList",style = "width:100%",multiple = "false"})
            <div id="rollerEdit" style="display: none;">
                <a id="editRoller">Edit</a>
                <a id="deleteRoller">Delete</a>
            </div>
        </div>
        <div class="col-sm-4">
            <p>Card Bot</p>
            <img src="http://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width: 100%" alt="Image">
        </div>
    </div>
</div><br>

