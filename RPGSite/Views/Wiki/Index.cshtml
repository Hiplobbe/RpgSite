@model RPGSite.Models.Wiki.WikiEntry


@using (Html.BeginForm(Model.Title+"/Save","Wiki"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.LabelFor(model => model.Title)
        <br/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @*@Html.HiddenFor(model => model.Title)*@

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text,  new {@class = "form-control", @id = "wikiTextArea", @readonly = true})
                @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="wikiEdit" type="button" onclick="toggleButtons()"  value="Edit"/>
                <input id="wikiSubmit" type="submit" onclick="toggleButtons()" value="Save" class="btn btn-default" style="display: none"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Start", "Index")
    @Scripts.Render("~/Scripts/TS Output/Wiki.js")
</div>
